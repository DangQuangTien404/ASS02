@page
@model DangQuangTien_RazorPages.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Manage Profile";
}

<h2>Manage Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="post" asp-antiforgery="true">
    <input type="hidden" asp-for="Account.AccountId" />

    <div class="mb-3">
        <label asp-for="Account.AccountName" class="form-label"></label>
        <input asp-for="Account.AccountName" class="form-control" />
        <span asp-validation-for="Account.AccountName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Account.AccountEmail" class="form-label"></label>
        <input asp-for="Account.AccountEmail" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Account.AccountPassword" class="form-label">New Password</label>
        <input asp-for="Account.AccountPassword" class="form-control" type="password" placeholder="Leave blank to keep current" />
        <span asp-validation-for="Account.AccountPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
