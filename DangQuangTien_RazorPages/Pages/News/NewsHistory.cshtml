@page
@model DangQuangTien_RazorPages.Pages.News.NewsHistoryModel
@{
    ViewData["Title"] = "My News History";
}

<h2>My News Articles</h2>

@if (!Model.Articles.Any())
{
    <p>No articles created yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model.Articles)
            {
                <tr>
                    <td>@article.NewsTitle</td>
                    <td>@article.Category?.CategoryName</td>
                    <td>@article.CreatedDate?.ToString("g")</td>
                    <td>@(article.NewsStatus == true ? "Active" : "Inactive")</td>
                </tr>
            }
        </tbody>
    </table>
}
